<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">
	<title>{ifset title}{include title|stripHtml} | {/ifset}Pocket Pilot</title>
	{if $control->getComponent('webpack', false) !== null}
		{control webpack common}
	{/if}
</head>

<body>
	{snippet flashes}
		{foreach $flashes as $flash}
			<span data-message="{$flash->message}" style="display: none"></span>
		{/foreach}
	{/snippet}
	{include content}
</body>
</html>
