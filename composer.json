{
    "name": "pocketpilot/web",
    "description": "Web application for Pocket Pilot",
    "keywords": ["pocketpilot", "pilot", "nette"],
    "type": "project",
    "license": ["MIT", "BSD-3-Clause", "GPL-2.0", "GPL-3.0"],
    "authors": [
        {
            "name": "Andrej SouÄek"
        }
    ],
    "repositories": [
        {
            "type": "github",
            "url": "https://github.com/andrejsoucek/gettext-translator"
        },
        {
            "type": "github",
            "url": "https://github.com/andrejsoucek/mail-panel"
        },
        {
            "type": "github",
            "url": "https://github.com/andrejsoucek/api-router"
        },
        {
            "type": "github",
            "url": "https://github.com/brainexe/php-graph-sdk"
        }
    ],
    "require": {
        "php": ">=8.0",
        "nette/application": "^3.0",
        "nette/bootstrap": "^3.0",
        "nette/caching": "^3.0",
        "nette/database": "^3.0",
        "nette/di": "^3.0",
        "nette/finder": "^3.0",
        "nette/forms": "^3.0",
        "nette/http": "^3.0",
        "nette/mail": "^3.0",
        "nette/robot-loader": "^3.0",
        "nette/safe-stream": "^3.0",
        "nette/security": "^3.0",
        "nette/utils": "^3.0",
        "latte/latte": "^2.9",
        "tracy/tracy": "^2.8.3",
        "facebook/graph-sdk": "dev-php8",
        "andrejsoucek/gettext-translator": "dev-php8",
        "nextras/mail-panel": "dev-php8",
        "contributte/api-router": "dev-php8"
    },
    "require-dev": {
        "phpstan/phpstan-nette": "^0.12",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "minimum-stability": "dev",
    "autoload": {
        "classmap": ["app/Booting.php"]
    },
    "scripts": {
        "cs": "vendor/bin/phpcs --standard=./coding-standard.xml -p app",
        "phpstan": "phpstan analyse --level 8 --configuration ./phpstan.neon"
    },
    "config": {
        "platform": {
            "php": "8.0"
        }
    }
}
